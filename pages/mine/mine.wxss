/* pages/mine/mine.wxss */
.content{
  background-color: #ffffff;
  height:400px;
}
.head{
  height: 90px;
  display: flex;
  flex-direction: row;
  background-color: #33cc66;
}
.head button{
  margin-top: 15px;
  margin-left: 20px;
  height: 50px;
  font-size: 18px;
  color: #ffffff;
  border-color: #ffffff;
}
.headIcon{
  margin-top: 15px;
  margin-left: 15px;
}
.headIcon image{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.login{
  color: #ffffff;
  font-size: 18px;
  position: absolute;
  left: 100px;
  margin-top: 35px;
}
.detail{
  color: #ffffff;
  font-size: 20px;
  position: absolute;
  right: 10px;
  margin-top: 35px;
}
.seperate{
  height: 8px;
  background-color: #dddddd;
}
.seperate1{
  height: 1px;
  background-color: #dddddd;
}
.hr{
  display: flex;
  flex-direction: column;
}
.item{
  height:40px;
  display: flex;
  flex-direction: row;
}
.itemIcon{
  margin-top: 10px;
  margin-left: 10px;
}
.itemIcon image{
  height: 20px;
  width: 20px;
}
.title{
  font-size: 15px;
  position: absolute;
  left: 40px;
  margin-top: 10px;
}
.detail1{
  font-size: 18px;
  position: absolute;
  right: 10px;
  margin-top: 8px;
}